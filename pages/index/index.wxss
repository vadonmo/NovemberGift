/**index.wxss**/

page {
  height: auto;
  background: linear-gradient(#1080df, #52b3fb) no-repeat fixed center;
}

.container {
  padding: 0rpx;
  color: white;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: transparent;
}

.topView {
  padding: 0rpx;
  width: 100%;
  position: relative;
  text-align: center;
  height: 450rpx;
}

.location {
  font-size: 25rpx;
  text-align: center;
  position: absolute;
  top: 1%;
  left: 0;
  right: 0;
}

.nowInfo {
  text-align: center;
  width: 100%;
  justify-content: space-between;
}

.nowImg {
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  margin-top: 5%;
}

.nowTemp {
  text-align: center;
  font-size: 180rpx;
  color: #fafbfb;
  position: absolute;
  top: 25%;
  left: 0;
  right: 0;
}

.nowWind {
  text-align: center;
  color: white;
  font-size: 40rpx;
  position: absolute;
  top: 75%;
  left: 0;
  right: 0;
}

.air_now {
  text-align: center;
  font-size: 40rpx;
  color: white;
  position: absolute;
  bottom: 2%;
  left: 0;
  right: 0;
}

.dailyForecast {
  justify-content: space-between;
}

.daily {
  display: flex;
  align-items: center;
  height: 80rpx;
  width: 100%;
  text-align: center;
  justify-content: space-between;
}

.dailyDate {
  text-align: left;
  font-size: 30rpx;
}

.dailyCond {
  text-align: left;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.dailyTmp {
  text-align: center;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.dailyImg {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.lifeStyle {
  margin: 20rpx;
  display: flex;
  align-items: center;
  text-align: center;
}

.lifeTitle {
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
  text-align: center;
  font-size: 39rpx;
}

.lifeSecTitle {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 39rpx;
}

.lifeText {
  margin-right: 20rpx;
  margin-left: 20rpx;
  width: 100%;
  text-align: left;
  font-size: 25rpx;
}

.life {
  width: 100%;
  margin-top: 10rpx;
}

.bottom {
  font-size: 20rpx;
  position: relative;
  bottom: 0rpx;
}
